<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#eeeeee"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    tools:context=".View.Activity.NoticeWriteActivity">

    <!-- 타이틀바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/main_yellow"
        android:padding="4dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="공지사항"
            android:textColor="@color/gray_text_color"
            android:textSize="18dp"
            android:padding="5dp"/>
    </LinearLayout>
    <!-- 타이틀바 end -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/noticeTitle_et"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:hint="제목을 입력하세요."
                android:layout_margin="2dp"
                />
        </LinearLayout>


        <EditText
            android:id="@+id/noticeContent_et"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:hint="내용을 입력하세요."
            android:padding="15dp"
            android:layout_margin="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/noticeWrite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:background="@drawable/round_background_2"
                android:gravity="center"
                android:onClick="mOnRegist"
                android:padding="10dp"
                android:text="등록"
                android:textColor="@color/gray_text_color"
                android:textSize="15dp" />

            <Button
                android:id="@+id/noticeCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:background="@drawable/round_background_2"
                android:gravity="center"
                android:onClick="mOnClose"
                android:padding="10dp"
                android:text="취소"
                android:textColor="@color/gray_text_color"
                android:textSize="15dp" />




        </LinearLayout>



    </LinearLayout>

</LinearLayout>